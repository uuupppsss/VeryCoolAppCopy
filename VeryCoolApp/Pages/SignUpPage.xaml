<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VeryCoolApp.ViewModel"
             x:Class="VeryCoolApp.Pages.SignUpPage"
             Title="Регистрация">
    <ContentPage.BindingContext>
        <vm:SignUpPageVM/>
    </ContentPage.BindingContext>
    <StackLayout>
        <HorizontalStackLayout>
            <Label Text="Логин:" />
            <Entry Text="{Binding Login}" Placeholder="Логин" PlaceholderColor="Gray" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Пароль" />
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Пароль" PlaceholderColor="Gray" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Повторите пароль" />
            <Entry Text="{Binding ConfirmPassword}" IsPassword="True" Placeholder="Повторите пароль" PlaceholderColor="Gray" />
        </HorizontalStackLayout>
        <Button Text="Регистрация" Command="{Binding SignUpCommand}"/>
    </StackLayout>
</ContentPage>