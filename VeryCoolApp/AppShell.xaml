<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VeryCoolApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VeryCoolApp"
    Shell.FlyoutBehavior="Disabled"
    Title="VeryCoolApp">

    <FlyoutItem Title="Главное меню" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Рецепты" ContentTemplate="{DataTemplate local:RecipesPage}" />
        <ShellContent Title="Ингредиенты" ContentTemplate="{DataTemplate local:IngredientsPage}" />
    </FlyoutItem>

    <TabBar>
        <Tab Title="Рецепты">
            <ShellContent ContentTemplate="{DataTemplate local:RecipesPage}" />
        </Tab>
        <Tab Title="Ингредиенты">
            <ShellContent ContentTemplate="{DataTemplate local:IngredientsPage}" />
        </Tab>
        <Tab Title="Добавить рецепт">
            <ShellContent ContentTemplate="{DataTemplate local:AddRecipePage}" />
        </Tab>
        <Tab Title="Добавить ингредиент">
            <ShellContent ContentTemplate="{DataTemplate local:AddIngridientPage}" />
        </Tab>
    </TabBar>

</Shell>
