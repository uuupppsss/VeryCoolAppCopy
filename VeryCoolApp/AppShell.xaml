<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VeryCoolApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:VeryCoolApp.Pages"
    xmlns:local="clr-namespace:VeryCoolApp"
    Shell.FlyoutBehavior="Disabled"
    Title="VeryCoolApp">

    <FlyoutItem Title="Главное меню">
        <Tab>
            <ShellContent Title="Рецепты" ContentTemplate="{DataTemplate local:RecipesPage}" />
            <ShellContent Title="Ингредиенты" ContentTemplate="{DataTemplate local:IngredientsPage}" />
        </Tab>
    </FlyoutItem>

</Shell>
